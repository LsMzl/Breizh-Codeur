            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {# Header #}
        {% block header %}
            {% set _route = app.request.get('_route') %}           
            {% block nav %}{% include "_partials/_nav.html.twig" %}{% endblock %}
        {% endblock %}

        <div class="container body-container">
        
        {# Body #}
        {% block body %}
            <div class="row">
            
              
                <div id="main" class="col-sm-9">                               
                {% block main %}
                {% endblock %}              
                    </div>

                <div id="sidebar" class="col-sm-3">
                {% block sidebar %}
                {% endblock %} 
                    </div>
            

            </div>    
        {% endblock %}
        </div>

        {# Footer #}
        {% block footer %}{% include "_partials/_footer.html.twig" %}{% endblock %}
    </body>
</html>
