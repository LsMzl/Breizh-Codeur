{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Liste des catégories ({{ tags | length}})</h1>


<div class="d-flex justify-content-between align-content-center">
        <div>
            <ul class="pagination pagination-sm">
                <li class="page-item disabled">
                <a class="page-link" href="#">&laquo;</a>
                </li>
                <li class="page-item active">
                <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">4</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">5</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">&raquo;</a>
                </li>
            </ul>
        </div>

        <div>       
            <span class="material-symbols-outlined fs-3 bg-warning p-2 rounded">format_list_bulleted</span>
            <span class="material-symbols-outlined fs-3 bg-warning p-2 rounded">apps</span>
        </div>
    </div> 

    {% block main %}

    {# Affichage des commentaires #}
    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">
                    <i class="bi bi-123"></i>
                    ID
                </th>
                <th scope="col">
                    <i class="bi bi-chat-left-fill"></i>
                    Catégorie
                </th>
                <th scope="col">
                    <i class="bi bi-list-task" aria-hidden="true"></i>
                    Nombre d'articles par catégorie
                </th>
                <th scope="col" class="text-center">
                    <i class="bi bi-card-text" aria-hidden="true"></i>
                    Articles associés
                </th>
                <th scope="col" class="text-center">
                    <i class="bi bi-gear-fill" aria-hidden="true"></i>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
        {# Informations sur les catégories #}
            {% for tag in tags %}
                <tr>
                    <td>
                        {{ tag.id }}   
                    </td>
                    <td>
                        {{ tag.name }}                  
                    </td>  
                    <td>{{ tag.getPosts | length }}</td> 

                    {# Liste des article associés à la catégorie #}
                    <td>
                        {% for post in tag.getPosts %}
                            <a href="{{ path('admin_blog_post_by_id', { id: post.id })}}">{{ post.id }}.</a>   
                        {% endfor %}           
                    </td> 

                    <td class="text-right">
                        <div class="items-actions d-flex justify-content-between">
                            <a class="btn btn-sm btn-success rounded" href="{{ path('admin_blog_tag_by_id', { id: tag.id }) }}"> 
                                <i class="bi bi-eye-fill fs-6" aria-hidden="true"></i>
                                Lire
                            </a>
                            <a class="btn btn-sm btn-info rounded" href="{{ path('admin_blog_edit_tag', { id: tag.id }) }}"> 
                                <i class="bi bi-pencil-fill fs-6" aria-hidden="true"></i>
                                Editer
                            </a>
                            {# Importation du formulaire de suppression #}
                            {{ include('admin/components/_form_delete_tag.html.twig', { tag: tag }, with_context = false) }}  
                        </div>
                    </td>
                </tr>

                {% else %}
                    <tr>
                        <td colspan="4" align="center">Vide</td>
                    </tr>              
            {% endfor %}       
        </tbody>    
    </table>
    {% endblock %}

{% endblock %}
