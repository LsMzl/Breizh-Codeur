{% extends 'base.html.twig' %}

{% block title %}{{tag.name}}{% endblock %}

{% block body %}
    <h1 class="text-center mb-5"> {{ tag.name }} ({{ tag.getPosts|length}}) </h1>

    <div>
    {% for article in tag.getPosts %}
    <div class="d-flex">
        <div class="border-bottom mb-3 p-3 col-11">
            <a href="{{ path('show', { id: article.id } )}}"><h4>{{ article.title }}</h4></a>
            <p>{{article.publishedAt|date("d/m/Y")}}</p>
            <p>Par {{ article.getAuthor.fullName }}</p>   
        </div> 
        {# Reactions #}
        <div class="col-1">
            <p>
                {{ random(50)}} 
                <i class="bi bi-chat-text"></i>
            </p>
            <p>
                {{ random(50)}} 
                <i class="bi bi-heart-fill"></i>
            </p>
        </div> 
    </div>
    {% endfor %}
    </div>

    {# Pagination #}
    <div>
        <ul class="pagination pagination-sm">
            <li class="page-item disabled">
            <a class="page-link" href="#">&laquo;</a>
            </li>
            <li class="page-item active">
            <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
            <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
            <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
            <a class="page-link" href="#">4</a>
            </li>
            <li class="page-item">
            <a class="page-link" href="#">5</a>
            </li>
            <li class="page-item">
            <a class="page-link" href="#">&raquo;</a>
            </li>
        </ul>
    </div>


{% endblock %}
