{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

  {% block main %}

    <div class="row">
      <div class="col-sm-7">
        <div class="well">
          <form action="" method="POST">
            <fieldset>

              <legend>
                <i class="bi bi-person-circle" aria-hidden="true"></i>
                Connexion
              </legend>

              <div class="form-group">
                <label for="username">Nom d'utilisateur</label>
                <input id="username" class="form-control" type="text" name="_username" value="{{ last_username }}">
              </div>
              <div class="form-group form-group-password">
                <label for="password">Mot de passe</label>
                <input id="password" class="form-control" type="password" name="_password">
              </div>
              <div class="form-group d-flex justify-content-between">
                <label>
                  <input type="checkbox" name="_remember_me" checked>
                  Rester connecté
                </label>
                <a href="">
                  Mot de passe oublié ?
                </a>
              </div>

              {# On envoie le jeton csrf en caché #}
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
              <button type="submit" class="btn btn-info rounded">
                <i class="bi bi-box-arrow-in-right" aria-hidden="true"></i>
                Se connecter
              </button>
              {# Lien vers le page d'inscription #}
              <p class="mt-3">
                Pas encore inscrit ? Inscrivez-vous
                <a href="{{ path('app_register')}}" class="text-info">ici</a>.
              </p>
              

            </fieldset>
          </form>
        
        </div>
      </div>
    </div>
    {% endblock %}

{% endblock %}
